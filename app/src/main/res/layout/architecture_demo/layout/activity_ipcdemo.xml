<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ipc_demo.IPCDemoActivity">

    <Button
        android:id="@+id/btn_ipc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/ipc_button1" />

    <EditText
        android:id="@+id/ipc_editText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:ems="10" >
        <requestFocus />

    </EditText>

    <Button
        android:id="@+id/btnMessenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/ipc_messenger"/>

    <Button
        android:id="@+id/btnBookManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/ipc_book_manager"/>

</LinearLayout>