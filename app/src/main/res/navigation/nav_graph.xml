<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/page1Fragment">

    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.example.androiddemo.jetpack_demo.navigation.MyPage1Fragment"
        android:label="fragment_page1"
        tool:layout="@layout/fragment_my_page1">
        <action
            android:id="@+id/action_page2"
            app:destination="@+id/page2Fragment" />
    </fragment>

    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.androiddemo.jetpack_demo.navigation.MyPage2Fragment"
        android:label="fragment_page2"
        tool:layout="@layout/fragment_my_page2">
        <action
            android:id="@+id/action_page1"
            app:popUpTo="@id/page1Fragment" />

        <action
            android:id="@+id/action_page3"
            app:destination="@id/nav_graph_page3" />

    </fragment>

    <navigation
        android:id="@+id/nav_graph_page3"
        app:startDestination="@id/page3Fragment">
        <fragment
            android:id="@+id/page3Fragment"
            android:name="com.example.androiddemo.jetpack_demo.navigation.MyPage3Fragment"
            android:label="fragment_page3"
            tool:layout="@layout/fragment_my_page3" />
    </navigation>


</navigation>